                , bdscod
                , bytestring       >= 0.10
                , criterion
                , cassava
                , deepseq          >= 1.4.4.0
                , epi-sim
                , statistics       >= 0.15
  default-language: Haskell2010


test-suite tests
  type: exitcode-stdio-1.0
  main-is: Spec.hs
  other-modules:
      Paths_bdscod
  hs-source-dirs:
      test
  ghc-options:
  build-depends:
      base >=4.7 && <5
    , bdscod
